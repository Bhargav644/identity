generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model USER {
  id        String   @id @default(uuid())  //primary-key
  email     String   @unique               // Unique
  password  String                         // Hashed pwd
  name      String
  createdAt DateTime @default(now())       // will take auto timestamp
  updatedAt DateTime @updatedAt            // will auto update 

  @@index([email])
  @@map("users")                           //Name of table
}

// Implementing Session Based authentication
model Session {
  sid    String   @id                     
  sess   Json                             // Session data (JSON)
  expire DateTime                         

  @@index([expire])  // will index it for quick responses
  @@map("session")   
}